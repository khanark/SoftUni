<html lang='en'>

<head>
  <meta charset='UTF-8' />
  <meta name='viewport' content='width=device-width, initial-scale=1.0' />
  <link rel='stylesheet' href='/css/site.css' />
  <title>Publish Auction</title>
</head>

<body>
  <div id='page-content'>
    <header>
      <a href='/' class='title-logo'>
        <img src='/assets/logo.png' />
        <span>Auction House</span>
      </a>
      <nav class='main-nav nav-mid'>
        <ul>
          <li>
            <a href='/browse'>Browse</a>
          </li>
          <!-- User actions -->
          {{#if user}}
          <li class='user'>
            <a href='/create'>Publish</a>
          </li>
          <!-- Bonus action -->
          <li class='user'>
            <a href='/closed'>Closed Auctions</a>
          </li>
          <li class='user'>
            <a href='/auth/logout'>Logout</a>
          </li>
          {{else}}
          <!-- Guest actions -->
          <li class='guest'>
            <a href='/auth/register'>Register</a>
          </li>
          <li class='guest'>
            <a href='/auth/login'>Login</a>
          </li>
          {{/if}}
        </ul>
      </nav>
    </header>
    <main>
      {{! In case of error, display the following div }}
      {{#each errors}}
      <div class='error-box'>
        <p>{{this}}</p>
      </div>
      {{/each}}
      {{! each template goes here }}
      {{{body}}}
    </main>
    <footer>SoftUni &copy; 2022 | Design by Viktor Kostadinov</footer>
  </div>
</body>

</html>