<section class='create-form-container'>

  <form action='/home/create' method='post'>
    <h3>Create Book Review</h3>
    <label>Title</label>
    <input type='text' name='title' class='box' id='title' />
    <label>Author</label>
    <input type='text' name='author' class='box' id='author' />
    <label>Genre</label>
    <input type='text' name='genre' class='box' id='genre' />
    <label>Stars</label>
    <input type='number' name='stars' class='box' id='stars' />
    <label>Image</label>
    <input type='text' name='image' class='box' id='image' />
    <label>Review</label>
    <textarea class='box' name='review' id='review'></textarea>
    <input type='submit' value='Create' class='btn' />
  </form>
</section>