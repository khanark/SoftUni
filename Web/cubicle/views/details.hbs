{{#with cube}}
<main>
  <h1>{{name}}</h1>
  <img class='cube' src='{{imageUrl}}' />
  <div class='details'>
    <p><span>Description:</span>{{description}}</p>
    <p><span>Difficulty level:</span> {{difficulty}}</p>
    <a class='btn' href='/'>Back</a>
    <a class='btn' href='/details/edit/{{id}}'>Edit</a>
    <a class='btn' href='/details/delete/{{id}}'>Delete</a>
    <a class='btn' href='/details/attach/{{id}}'>Attach</a>
  </div>
  <h2>Accessories</h2>
  <div class="accessories">
    {{#each accessories}}
    {{>accessory}}
    {{else}}
    <h3 class='italic'>This cube has no accessories yet...</h3>
    {{/each}}
  </div>
</main>
{{/with}}