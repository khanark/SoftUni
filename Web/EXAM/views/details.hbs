<div class="container">
  <div class="col-9">

    <!-- Start Pet Photo Post Section -->
    <div class="card">
      <div class="top">

        <!-- Start User Details and Image Location Section -->
        <div class="userDetails">

          <!-- Link to User Profile Details Page-->
          <a href="/photo/user/{{photo.owner._id}}">
            {{!-- <div> --}}
              <div class="profilepic">
                <div class="profile_img">
                  <div class="image">
                    <img src="/static/images/person.png" alt="img8">
                  </div>
                </div>
              </div>
              {{!--
            </div> --}}
          </a>
          <h3>

            <!-- Link to User Profile Details Page -->
            <p>
              <!-- User's username -->
              {{photo.owner.username}}
            </p>
            <!-- photo's location -->
            <span>{{photo.location}}</span>

            <!-- IF the viewer is the creator of the photo -->
            {{#if photo.isAuthor}}
            <div class="edit-delete-btns">

              <!-- Edit Pet Photo -->
              <a href="/photo/edit/{{photo._id}}">
                <img class="edit-img" src="/static/images/edit-pen-icon-6.jpg" alt="edit button">
              </a>

              <!--Delete Pet Photo -->
              <a href="/photo/delete/{{photo._id}}">
                <img class="bin-img" src="/static/images/icon-remove-22.jpg" alt="bin button">
              </a>
            </div>
            {{/if}}
          </h3>
        </div>

      </div>

      <!-- Start Pet Photo -->
      <div class="imgBx">
        <!-- Pet Photo -->
        <img src="{{photo.image}}" alt="post" class="cover">
      </div>



      <div class="bottom">

        <p class="message">
          <b class="petDescription">This is my pet!</b>
        </p>


        <!-- Photo description -->
        <div class="pet-details">
          <p class="petName">Name: {{photo.name}}</p>
          <p class="petAge">Age: {{photo.age}}</p>
        </div>
        {{#each photo.commentList}}
        <div class="comments">
          <div class="comments-top">
            <div class="userDetails">
              <div class="comment-data">
                <div class="profilepic">
                  <div class="profile_img">
                    <div class="image">
                      <!-- User Profile Image -->
                      <img src="/static/images/person.png" alt="img8">
                    </div>
                  </div>
                </div>

                <!--User's username-->
                <p><b>{{username}}</b>- {{comment}}</p>
              </div>
            </div>
            <br>
          </div>
        </div>
        {{/each}}
      </div>
      {{#if user}}
      {{#unless photo.isAuthor}}
      <div class="addComments">
        <!-- Start Add Comments Form -->
        <form method="get" action="/photo/comment/{{photo._id}}">
          <textarea id="comment-textarea" name="comment" cols="40" rows="10" placeholder="Add comment..."></textarea>
          <!-- Post Comments Button -->
          <button type="submit">Post</button>
        </form>
      </div>
      {{/unless}}
      {{/if}}
    </div>
  </div>
</div>