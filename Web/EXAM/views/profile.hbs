<!-- Start Profile Details Section -->
<div class="profile">

  <!-- Start Profile Personal Data Section -->
  <div class="profile-data">
    <div class="profile_img">
      <div class="image">
        <img src="/static/images/person.png" alt="img8">
      </div>
    </div>
    <div class="personal">
      <div class="edit">
        <!-- User Username -->
        <p>{{profile.username}}</p>
      </div>
      <div class="data">

        <!-- Total Number of Photos by the User -->
        <span>{{profile.myPhotos.length}}</span>
        <p>photos</p>

      </div>
      <!-- User Email Address -->
      <p class="email">{{profile.email}}</p>
    </div>
  </div>

  <!-- Start Uploaded Photos Section -->
  <div class="pet-photos">
    {{#each profile.myPhotos}}
    <!-- Link to Uploaded Pet Photo -->
    <a href="/photo/details/{{_id}}">
